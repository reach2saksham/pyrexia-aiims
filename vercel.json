{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "installCommand": "cd frontend && npm install",
                "buildCommand": "npm run build",
                "outputDirectory": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}